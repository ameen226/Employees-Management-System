@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if(Model.Count() > 0)
{

    <div class="m-2">
        <form asp-action="Index" method="get" class="row offset-2">
            <div class="col-8">
                <input type="text" class="form-control" name="searchValue" placeholder="User's name" />
            </div>
            <div class="col-4">
                <input type="submit" class="btn btn-info" value="Search" />
            </div>
        </form>
    </div>


    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(user => user.Id)</td>
                <td>@Html.DisplayNameFor(user => user.FirstName)</td>
                <td>@Html.DisplayNameFor(user => user.LastName)</td>
                <td>@Html.DisplayNameFor(user => user.Email)</td>
                <td>@Html.DisplayNameFor(user => user.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(user => user.Roles)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@string.Join(",", user.Roles)</td>
                    <partial name="_ButtonsPartialView" model="@user.Id"> 

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        <h1>There Is No Users</h1>
    </div>
}