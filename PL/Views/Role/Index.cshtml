@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a asp-action="Create" class="btn btn-success">Add New Role</a>
<br />


@if (Model.Count() > 0)
{

    <div class="m-2">
        <form asp-action="Index" method="get" class="row offset-2">
            <div class="col-8">
                <input type="text" class="form-control" name="searchValue" placeholder="Role's name" />
            </div>
            <div class="col-4">
                <input type="submit" class="btn btn-info" value="Search" />
            </div>
        </form>
    </div>


    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(role => role.Id)</td>
                <td>@Html.DisplayNameFor(role => role.RoleName)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.RoleName</td>
                    <partial name="_ButtonsPartialView" model="@role.Id">

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        <h1>There Is No Roles</h1>
    </div>
}